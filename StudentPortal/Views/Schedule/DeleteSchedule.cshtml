@{
    ViewData["Title"] = "Delete Schedule";
}

@model Schedule

<h1>Delete Schedule</h1>

<!-- Form to get EDPCode and retrieve schedule information -->
<form method="get" asp-action="DeleteSchedule">
    <div class="form-group">
        <label for="edpCode">Enter EDP Code</label>
        <input type="text" id="edpCode" name="edpCode" class="form-control" placeholder="Enter EDP Code" required />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (Model != null)
{
    <!-- Display retrieved information and allow input of other fields -->
    <form method="post">
        <div><h2 class="text-black">Add Subject</h2></div>
        <hr class="text-black">

        <div class="col-12">
            <label asp-for="SubEdpCode" class="form-label">EDPCode</label>
            <input asp-for="SubEdpCode" type="text" disabled class="form-control" required />
            <span asp-validation-for="SubEdpCode" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="SubjCode" class="form-label">Subject Code</label>
            <input asp-for="SubjCode" type="text" disabled class="form-control" required />
            <span asp-validation-for="SubjCode" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="description" class="form-label">Description</label>
            <input asp-for="description" type="text" disabled class="form-control" required />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>

        <!-- Editable fields -->
        <div class="row mt-3">
            <div class="col">

                <label asp-for="starttime" class="form-label">Start Time</label>
                <input asp-for="starttime" type="time" disabled class="form-control" required />
                <span asp-validation-for="starttime" class="text-danger"></span>
            </div>

            <div class="col">
                <label asp-for="endtime" class="form-label">End Time</label>
                <input asp-for="endtime" type="time" disabled class="form-control" required />
                <span asp-validation-for="endtime" class="text-danger"></span>
            </div>

        </div>

        <div class="row mt-3">
            <div class="col">
                <label asp-for="section" class="form-label">Section</label>
                <input asp-for="section" type="text" disabled class="form-control" required />
                <span asp-validation-for="section" class="text-danger"></span>
            </div>

            <div class="col">
                <label asp-for="roomnum" class="form-label">Room</label>
                <input asp-for="roomnum" type="number" disabled class="form-control" required />
                <span asp-validation-for="roomnum" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                <label asp-for="curryear" class="form-label">Curriculum</label>
                <input asp-for="curryear" type="text" disabled class="form-control" required />
                <span asp-validation-for="curryear" class="text-danger"></span>
            </div>



            <div class="col">
                <label asp-for="days" class="form-label">Class Days</label>
                <select asp-for="days" disabled class="form-select text-black-50">
                    <option selected>...</option>
                    <option>MWF</option>
                    <option>TTHS</option>
                    <option>MW</option>
                    <option>MF</option>
                    <option>WF</option>
                    <option>TTH</option>
                    <option>TS</option>
                    <option>THS</option>
                    <option>M</option>
                    <option>T</option>
                    <option>W</option>
                    <option>TH</option>
                    <option>F</option>
                    <option>S</option>
                </select>
                <span asp-validation-for="days" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="AMPM" />
            <input type="hidden" asp-for="status" />
            <input type="hidden" value="@ViewBag.EdpCode" name="tempEdpCode" />
            <input type="hidden" value="@ViewBag.RoomNum" name="tempRoom" />

        </div>
        <br />
        <div class="row mt-3">
            <div class="col-md-2">
                <button type="submit" class="btn btn-save" style="background-color:crimson; width:100%">Delete</button>
            </div>
            <div class="col-md-2">
                <a href="@Url.Action("Index","Home")" class="btn btn-save" style="background-color:#E4D00A; width:100%">Cancel</a>
            </div>
        </div>
    </form>
}
