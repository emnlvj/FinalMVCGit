@model Student
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>

    
</style>

<form class="row g-3" method="post">
    <div><h2 class="text-black">Add Student</h2></div>
    <hr class="text-black">
    <div class="col-md-6 border-danger-subtle">
        <label asp-for="Id" class="form-label">Student ID</label>
        <input asp-for="Id" type="text" class="form-control">
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="FName" class="form-label">First Name</label>
        <input asp-for="FName" type="text" class="form-control" placeholder="First Name">
        <span asp-validation-for="FName" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="LName" class="form-label">Last Name</label>
        <input asp-for="LName" class="form-control" placeholder="Last Name">
        <span asp-validation-for="LName" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="MName" class="form-label">Middle Name</label>
        <input asp-for="MName" type="text" class="form-control" placeholder="Middle Name">
        <span asp-validation-for="MName" class="text-danger"></span>
    </div>
    <div class="col-md-2">
        <label asp-for="Age" class="form-label">Age</label>
        <input asp-for="Age" type="text" class="form-control">
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Course" class="form-label">Course</label>
        <select asp-for="Course" class="form-select text-black-50">
            <option selected>Choose course...</option>
            <option>BSIT</option>
            <option>BSCE</option>
            <option>BSA</option>
            <option>BSN</option>
        </select>
        <span asp-validation-for="Course" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="Section" class="form-label">Section</label>
        <input asp-for="Section" type="text" class="form-control">
        <span asp-validation-for="Section" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="Year" class="form-label">Year Level</label>
        <input asp-for="Year" type="text" class="form-control">
        <span asp-validation-for="Year" class="text-danger"></span>
   </div>
    <div class="col-12">
        <button type="submit" class="btn" style="background-color: #8B0000;color: white; border: none; border-radius: 0; font-size:10px" onmouseover="this.style.backgroundColor='#FF0000';"
                onmouseout="this.style.backgroundColor='#8B4513';">
            <i class="bi bi-arrow-down-right-circle"></i>    Submit
        </button>
    </div>
</form>

        