@{
}
@model PreRequisite

<h1>Add Prerequisite</h1>

<form  method="post">
    <div class="form-group">
        <label asp-for="PreSubjCode" class="form-label">Prerequisite Subject Code</label>
        <input asp-for="PreSubjCode" class="form-control" required />
        <span asp-validation-for="PreSubjCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PreDescript" class="form-label">Description</label>
        <input asp-for="PreDescript" class="form-control" required />
        <span asp-validation-for="PreDescript" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PreUnits" class="form-label">Units</label>
        <input asp-for="PreUnits" class="form-control" type="number" required />
        <span asp-validation-for="PreUnits" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SubjCode" class="form-label">Subject Code</label>
        <input asp-for="SubjCode" class="form-control" required />
        <span asp-validation-for="SubjCode" class="text-danger"></span>
    </div>

    

    <button type="submit" class="btn btn-primary">Save Prerequisite</button>
</form>

